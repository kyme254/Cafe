<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".ui.UserInfo.UserFragment">

<LinearLayout
    android:layout_marginTop="10dp"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView

        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
           android:layout_gravity="center"
            android:id="@+id/cardView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="75dp"
            >


            android:layout_height="wrap_content"
            <TextView
                android:layout_gravity="center"
                android:text="Upload a Picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/picture"
                android:layout_width="150dp"
                android:layout_height="150dp">
            </ImageView>

            <ImageView
                android:layout_marginLeft="100dp"
                android:layout_marginTop="100dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/cameraicon">

            </ImageView>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>
</LinearLayout>


    <androidx.cardview.widget.CardView
        android:elevation="24dp"
        app:cardMaxElevation="36dp"
        app:cardBackgroundColor="#039BE5"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="40dp">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/userSectionNsme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="#fff"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/userSectionEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userSectionNsme"
                android:layout_centerHorizontal="true"
                android:textColor="#fff"

                android:textSize="18dp" />

            <TextView
                android:id="@+id/userSectionPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userSectionEmail"
                android:layout_centerHorizontal="true"
                android:textColor="#fff"

                android:textSize="18dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_below="@+id/cardView"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:id="@+id/totalmoney"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Expenses for food"
            android:textColor="#22359F"
            android:textSize="28dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="RS :"
            android:id="@+id/rs"
            android:textColor="#000000"
            android:textSize="40dp" />

        <TextView
            android:layout_toRightOf="@+id/rs"
            android:id="@+id/usertotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="0"
            android:textColor="#000000"
            android:textSize="40dp" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button

            android:id="@+id/resetdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rectangele"
            android:text="RESET"
            android:textColor="#ffff" />

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressBarpic"
            style="?android:attr/progressBarStyle"
            android:layout_width="185dp"
            android:layout_height="109dp"
            android:layout_centerInParent="true" />



    </LinearLayout>

    <Button
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_rectangele"
        android:text="Logout"
        android:textColor="#ffff" />
    <ImageView
        android:src="@mipmap/burger"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




</LinearLayout>